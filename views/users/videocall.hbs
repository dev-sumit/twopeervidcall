<html>
	<head>
		<meta charset="utf-8">
		<title>Video Page- {{localid}}</title>
		<link rel="stylesheet" type="text/css" href="/css/callpagestyle.css">
        
	</head>
	<script>

	console.log("localid: "+'{{localid}}');
	console.log("callpickerlid: "+'{{callpickerid}}');

	let sharebtnstatus = "off";
	function sharebtnpressed(){
		
		if(sharebtnstatus == "off"){
			//turning on share button
			sharebtnstatus = "on";
			StartMyScreenCapture();
			document.getElementById("startsharebtn").style.backgroundColor =" #c9c6c5"; 
			document.getElementById("stopsharebtn").style.backgroundColor = "#a5cf0e";
			
		}else if (sharebtnstatus == "on"){
			
			sharebtnstatus = "off";
			StopMyScreenCapture();
			document.getElementById("stopsharebtn").style.backgroundColor = "#c9c6c5";
			document.getElementById("startsharebtn").style.backgroundColor = "#a5cf0e";
		
		}
	}

    
</script>
	<body>
		
		<video class="LocalScreen" id = "localPeerVideo" autoplay muted playsinline></video>
		<video class="RemoteScreen" id = "remotePeerVideo" autoplay playsinline></video>
		<br/>
		
		<div class="tooltip">
            <a  id = "stopsharebtn" onclick="sharebtnpressed()" >Off</a>
            <span class="tooltiptext">
                    Screen Share OFF
                </span>
        </div>

        <div class="tooltip">
            <a  id = "startsharebtn" onclick="sharebtnpressed()">On</a>
            <span class="tooltiptext">
                    Screen Share ON
                </span>
        </div>
        
		
		<div class="tooltip">
            <a class="Call-Btn" onclick = "VideoCall('{{callpickerid}}')">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="black" width="18px" height="18px"><path d="M0 0h24v24H0z" fill="none"/><path d="M20.01 15.38c-1.23 0-2.42-.2-3.53-.56-.35-.12-.74-.03-1.01.24l-1.57 1.97c-2.83-1.35-5.48-3.9-6.89-6.83l1.95-1.66c.27-.28.35-.67.24-1.02-.37-1.11-.56-2.3-.56-3.53 0-.54-.45-.99-.99-.99H4.19C3.65 3 3 3.24 3 3.99 3 13.28 10.73 21 20.01 21c.71 0 .99-.63.99-1.18v-3.45c0-.54-.45-.99-.99-.99z"/></svg>
                <span class="tooltiptext">
                    Call {{callpickerid}}
                </span>
            </a>
        </div>
        
        <div class="tooltip">
            <a class="Cam-Btn" onclick = "showLocalVideo('{{localid}}')">
                <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M17 10.5V7c0-.55-.45-1-1-1H4c-.55 0-1 .45-1 1v10c0 .55.45 1 1 1h12c.55 0 1-.45 1-1v-3.5l4 4v-11l-4 4zM14 13h-3v3H9v-3H6v-2h3V8h2v3h3v2z"/></svg>
                <span class="tooltiptext">
                    Start Camera
                </span>
            </a>
        </div>  
		
		<script src="https://www.gstatic.com/firebasejs/4.9.0/firebase.js"></script>
        <script src="/js/vidcall.js"></script>
		
	</body>
</html>